from flask import Flask, jsonify
import requests

app = Flask(__name__)

TMDB_API_KEY = 'SUA_CHAVE_DE_API'  # Substitua pela sua chave da TMDb
MARVEL_MOVIES = [
    'Spider-Man', 'Iron Man', 'Avengers', 'Black Panther'  # Adicione outros filmes
]
DC_MOVIES = [
    'Batman', 'Superman', 'Wonder Woman', 'Aquaman'  # Adicione outros filmes
]

def get_revenue(movie_name):
    url = f'https://api.themoviedb.org/3/search/movie?api_key={TMDB_API_KEY}&query={movie_name}'
    response = requests.get(url)
    data = response.json()

    if data['results']:
        return data['results'][0]['revenue']
    return 0

@app.route('/revenue', methods=['GET'])
def revenue():
    marvel_revenue = sum(get_revenue(movie) for movie in MARVEL_MOVIES)
    dc_revenue = sum(get_revenue(movie) for movie in DC_MOVIES)

    return jsonify({
        'Marvel': marvel_revenue,
        'DC': dc_revenue
    })

if __name__ == '__main__':
    app.run(debug=True)
